@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="fw-bold mb-3">Plan your next stay</h3>
                <p>
                    Welcome to <strong>HotelBookingSystem</strong>. Browse our rooms, choose your dates,
                    and enjoy a smooth booking experience.
                </p>
                <a asp-controller="UserBookings" asp-action="Create" class="btn btn-primary mt-2">
                    <i class="fas fa-calendar-plus"></i> Book a Room
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="fw-bold mb-3">Why book with us?</h5>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> Easy online booking</li>
                    <li><i class="fas fa-check text-success"></i> Secure account system</li>
                    <li><i class="fas fa-check text-success"></i> Clear booking overview</li>
                </ul>
            </div>
        </div>
    </div>
</div>
