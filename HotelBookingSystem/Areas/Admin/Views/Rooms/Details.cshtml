@model HotelBookingSystem.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<h2 class="fw-bold mb-4">Room Details</h2>

<div class="card shadow-sm">
    <div class="card-body">

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl"
                 style="width:250px; height:180px; object-fit:cover;"
                 class="img-thumbnail mb-3" />
        }

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3 fw-bold">Capacity</dt>
            <dd class="col-sm-9">@Model.Capacity</dd>

            <dt class="col-sm-3 fw-bold">Price per Night</dt>
            <dd class="col-sm-9">€@Model.PricePerNight</dd>

            <dt class="col-sm-3 fw-bold">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>

        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back</a>

    </div>
</div>
