@model HotelBookingSystem.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<h2 class="fw-bold text-danger mb-4">Delete Room</h2>

<div class="card shadow-sm border-danger">
    <div class="card-body">

        <p class="text-danger fw-bold">Are you sure you want to delete this room?</p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl"
                 style="width:200px; height:140px; object-fit:cover;"
                 class="img-thumbnail mb-3" />
        }

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3 fw-bold">Capacity</dt>
            <dd class="col-sm-9">@Model.Capacity</dd>

        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </form>

    </div>
</div>
