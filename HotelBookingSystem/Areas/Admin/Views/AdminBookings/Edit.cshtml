@model HotelBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h2 class="fw-bold mb-4">Edit Booking</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Room</label>
                <input class="form-control" value="@Model.Room?.Name" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label"></label>
                <input asp-for="UserId" class="form-control" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CheckInDate" class="form-label"></label>
                    <input asp-for="CheckInDate" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="CheckOutDate" class="form-label"></label>
                    <input asp-for="CheckOutDate" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="TotalPrice" class="form-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status"
                        asp-items="Html.GetEnumSelectList<HotelBookingSystem.Models.BookingStatus>()"
                        class="form-select"></select>
            </div>

            <button class="btn btn-primary">Save Changes</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>

        </form>

    </div>
</div>
